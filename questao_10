#include <stdio.h>

int main(){
    char x1[4], *p1;
    int x2[4], *p2;
    float x3[4], *p3;
    double x4[4], *p4;

    p1 = x1;
    p2 = x2;
    p3 = x3;
    p4 = x4;

    printf("%d %d %d %d \n", p1, p1+1, p1+2, p1+3);
    printf("%d %d %d %d \n", p2, p2+1, p2+2, p2+3);     
    printf("%d %d %d %d \n", p3, p3+1, p3+2, p3+3);
    printf("%d %d %d %d \n", p4, p4+1, p4+2, p4+3);
}
